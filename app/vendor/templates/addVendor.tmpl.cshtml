@using Kenrapid.CRM.Web.Helpers
@model Kenrapid.CRM.Web.Models.Vendor.AddVendorForm
<form novalidate
	  ng-submit="vm.form.$valid && vm.add()"
	  name="vm.form">
	<fieldset ng-disabled="vm.saving">

		<div class="modal-header">
			<h3 class="modal-title">Add New Vendor</h3>
		</div>

		<div class="modal-body">

			<div class="alert alert-info" ng-hide="vm.errorMessage != null">
				Enter details for the new vendor.
			</div>
		    <div class="alert alert-danger" ng-show="vm.errorMessage != null">
		        {{vm.errorMessage}}
		    </div>

            @Html.Angular().EditorForModel("vm.vendor")
		</div>

		<div class="modal-footer">
			<button class="btn btn-danger">Add Vendor</button>
			<button type="button" class="btn btn-warning" ng-click="$parent.$dismiss()">Cancel</button>
		</div>

	</fieldset>
</form>