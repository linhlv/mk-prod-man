@using Kenrapid.CRM.Web.Domain
@model Kenrapid.CRM.Web.Domain.IssueType
@{
    var options = Enum.GetValues(typeof(IssueType))
        .Cast<IssueType>()
        .Select(t => new SelectListItem
        {
            Text = t.ToString(),
            Value = t.ToString(),
            Selected = t == Model
        }).ToArray();
}
@Html.DropDownList("", options, new { @class = "form-control" })
