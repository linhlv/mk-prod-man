@using System.Reflection
@model dynamic
@foreach (var prop in ViewData.ModelMetadata.Properties
    .Where(p => p.ShowForEdit))
{
    if (prop.DataTypeName == "HiddenField")
    {
        @Html.Editor(prop.PropertyName, AngularTemplateHelper.GetTemplateForProperty(prop), new { Prefix = ViewBag.Prefix })
    }
    else
    {
        <div class="form-group has-feedback" form-group-validation="@prop.PropertyName">
            @Html.BootstrapLabel(prop.PropertyName)
            @Html.Editor(prop.PropertyName, AngularTemplateHelper.GetTemplateForProperty(prop), new { Prefix = ViewBag.Prefix })
        </div>
    }
}
