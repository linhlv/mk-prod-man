@model string
@using Kenrapid.CRM.Web.Data
@using Kenrapid.CRM.Web.Infrastructure
@{
    var dbContext = Context.GetContainer().GetInstance<KenrapidDbContext>();
    var availableUsers = dbContext.Users.Select(u => new SelectListItem
    {
        Text = u.UserName,
        Value = u.Id,
        Selected = u.Id == Model
    }).ToArray();
}
@Html.DropDownList("", availableUsers, new { @class = "form-control" })